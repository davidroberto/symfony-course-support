{% extends "base.html.twig" %}


{% block main %}
<main>
    <section class="section">
        {% for book in lastBooks %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ book.title }}</h2>
                    {% if book.author %}
                        <h3>{{ book.author.firstName }} {{ book.author.lastName }}</h3>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        <a href="{{ path('books') }}">Voir tous les livres</a>
    </section>

    <section class="section">
        {% for author in lastAuthors %}
            <div class="card">
                <div class="card-text">
                    <h2>{{ author.firstName }} {{ author.lastName }}</h2>
                    {% if author.deathDate %}
                        <h3>Mort le : {{ author.deathDate | date('D-m-Y') }}</h3>
                    {% else %}
                        Cet auteur n'est malheureusement pas encore mort
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        <a href="{{ path('authors') }}">Voir tous les auteurs</a>
    </section>
</main>
{% endblock main%}
